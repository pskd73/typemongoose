{
    "compilerOptions": {
        "target": "ES5",
        "baseUrl": ".",
        "rootDirs": ["app"],
        "paths": {
            "app/*": ["./src/*"]
        },
        "noResolve": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "ES2016"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "lib"
    ]
}
